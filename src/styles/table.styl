body
  background-size cover
  font-family Arial, sans-serif
  overflow hidden
  margin 0
  height 100vh
  padding-bottom 40px

.header
  padding 20px
  display flex
  border-radius 10px

.description-button, .main-button
  margin-right 20px
  padding 10px 20px
  background-color black
  color white
  cursor pointer
  margin-left 10px
  font-size 13px

.description-button:hover, .main-button:hover
  background-color #077D97

.content
  background #FFFFFF
  padding 20px
  border-radius 8px
  box-shadow 0 0 10px rgba(0, 0, 0, 0.1)
  margin 20px 30px
  margin-right 20px
  display flex
  flex-direction column
  height 71%
  max-width 93%

.form-content
  display flex
  flex-direction column
  align-items flex-start
  width 100%
  overflow-y auto
  overflow-x hidden
  margin 20px 30px
  margin-right 20px

.form-content details
  flex-direction row

.record-table
  width 100%
  border-collapse collapse
  border-spacing 20px

.record-table th, .record-table td
  padding 8px
  text-align center

.record-table th
  padding 6px 15px
  width 100px
  text-align center

.complete-botton
  margin-right 10px
  padding 5px 10px
  background-color #2EACC7
  color white
  border 2px solid rgba(255, 255, 255, 0.22)
  border-radius 4px
  cursor pointer
  margin-left 10px
  font-size 13px

  footer
    flex-direction column
    text-align center
    padding 10px

@media (max-width: 768px)
  .record-table
    width 100%
    overflow-x auto
    display block
    margin-bottom 20px

  .record-table th, .record-table td
    font-size 12px
    padding 5px

  .description-button, .main-button, .complete-button
    font-size 12px
    padding 8px 15px

  .form-content
    width 100%
    margin 10px 20px

