button-style()
  margin-right 20px
  padding 10px 20px
  background-color grey
  border-radius 4px
  cursor pointer
  margin-left 10px
  font-weight bold

body
  background-size cover
  background-position center center
  margin 0
  height 100vh
  padding-bottom 40px
  overflow hidden

.header
  background-color $primaryColor
  padding 20px
  display flex
  justify-content space-between
  border-radius 10px
  opacity 65%

.main-button
  button-style()

.content
  background-color white
  padding 15px
  margin 20px 30px
  display flex
  flex-direction column
  height 70%

.form-content
  display flex
  flex-direction column
  overflow-x auto

.form-content img
  align-self center
  margin-bottom 20px

footer
  display flex
  flex 1
  align-items center
  background-color lightgrey
  width 100%
  justify-content space-between
  margin auto


.form-content h2
  margin 0
  flex-shrink 0

@media (max-width: 600px)
  .header
    flex-direction column
    align-items center

  .content
    padding 10px
    margin 10px 15px

  .form-content
    align-items center
  .form-content img
    width 100%
    max-width 300px
